# Dept Dashboard Backend Configuration
# Copy this file to .env and fill in the values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=true
# Set to false in production!

# ===========================================
# SECURITY (CRITICAL - CHANGE IN PRODUCTION)
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# ===========================================
# DATABASE
# ===========================================
# Leave empty for SQLite (development)
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL=

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://localhost:6379
# Optional password for production:
# REDIS_PASSWORD=your-redis-password

# ===========================================
# CAS AUTHENTICATION
# ===========================================
CAS_SERVER_URL=https://sso.your-domain.fr/cas
CAS_SERVICE_URL=http://localhost:8000/api/auth/cas/callback
# Set to false in production!
CAS_USE_MOCK=true

# ===========================================
# FRONTEND URL (for redirects after auth)
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# CORS (comma-separated origins)
# ===========================================
# CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ===========================================
# SCODOC API (Optional)
# ===========================================
SCODOC_BASE_URL=
SCODOC_USERNAME=
SCODOC_PASSWORD=
SCODOC_DEPARTMENT=

# ===========================================
# PRODUCTION EXAMPLE
# ===========================================
# DEBUG=false
# SECRET_KEY=<generated-secret-key>
# DATABASE_URL=postgresql://dashboard:password@db:5432/dept_dashboard
# REDIS_URL=redis://redis:6379
# CAS_USE_MOCK=false
# CAS_SERVICE_URL=https://your-domain.fr/api/auth/cas/callback
# FRONTEND_URL=https://your-domain.fr
# CORS_ORIGINS=["https://your-domain.fr"]