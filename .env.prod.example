# Production Environment Variables
# Copy to .env and fill in all values

# ===========================================
# CRITICAL - MUST CHANGE
# ===========================================
DEBUG=false
SECRET_KEY=GENERATE_WITH_python_-c_"import_secrets;print(secrets.token_urlsafe(32))"
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://dashboard:${DB_PASSWORD}@db:5432/dept_dashboard

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ===========================================
# CAS AUTHENTICATION
# ===========================================
CAS_USE_MOCK=false
CAS_SERVER_URL=https://sso.univ-artois.fr/cas
CAS_SERVICE_URL=https://YOUR_DOMAIN/api/auth/cas/callback

# ===========================================
# URLS
# ===========================================
FRONTEND_URL=https://YOUR_DOMAIN
CORS_ORIGINS=["https://YOUR_DOMAIN"]

# ===========================================
# SCODOC (if used)
# ===========================================
SCODOC_BASE_URL=
SCODOC_USERNAME=
SCODOC_PASSWORD=
SCODOC_DEPARTMENT=
